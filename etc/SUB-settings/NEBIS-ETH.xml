<settings target="opac.nebis.ch:9909/NEBIS_UTF">
<!--
	pazpar2 settings for querying the NEBIS Z39.50 server
	* documentation: http://www.nebis.ch/technik/z3950.html
	* includes catalogue hint for linking to the web catalogue

	2010-2011: Sven-S. Porst, SUB Göttingen <porst@sub.uni-goettingen.de>
-->

	<set name="pz:name" value="ETH Zürich / NEBIS"/>

	<!-- prefix for building the catalogue link -->
	<set name="catalogueURLHint" value="http://opac.nebis.ch/F/?local_base=NEBIS&amp;func=find-b&amp;find_code=SYS&amp;request="/>


	<!-- mappings for search -->
	<set name="pz:cclmap:term" value="u=1016 t=l,r s=al"/>
	<set name="pz:cclmap:fulltext" value="u=1016 t=l,r s=al"/>
	
	<set name="pz:cclmap:title" value="u=4 s=al 2=102"/>
	<set name="pz:cclmap:person" value="u=1003 s=al"/>
	<set name="pz:cclmap:date" value="u=31 r=r"/>
	<set name="pz:cclmap:subject" value="u=21 s=al"/>
	<set name="pz:cclmap:isbn" value="u=7"/>
	<set name="pz:cclmap:issn" value="u=8"/>


	<!-- Retrieval settings -->
	<set name="pz:requestsyntax" value="marc21"/>
	<set name="pz:elements" value="F"/>
	<set name="pz:queryencoding" value="utf-8"/>

	<!-- Result normalization settings -->
	<set name="pz:nativesyntax" value="txml;utf-8"/>
	<set name="pz:xslt" value="tmarc.xsl,SUB-xsl/catalogue-url-hint+id.xsl"/>
	
</settings>

