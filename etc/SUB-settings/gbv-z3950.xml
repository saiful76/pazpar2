<settings target="z3950.gbv.de:20012/*">
<!--
	GBV Z39.50 Targets:
	transformations:
	* gbv-cleaner to fix a few quirks with GBV data
	* tmarc.xsl
	* language-code-cleaner to remove deprecated language codes

	2010/10-12: Sven-S. Porst, SUB Göttingen <porst@sub.uni-goettingen.de>
-->

	<!-- mapping for unqualified search -->
	<set name="pz:cclmap:term" value="u=1016 5=1 s=al"/>

	<!-- field-specific mappings -->
	<set name="pz:cclmap:ti" value="u=4 s=al 2=102"/>
	<set name="pz:cclmap:au" value="u=1004 s=al"/>
	<set name="pz:cclmap:su" value="u=21 s=al"/>
	<set name="pz:cclmap:isbn" value="u=7"/>
	<set name="pz:cclmap:issn" value="u=8"/>
	<set name="pz:cclmap:date" value="u=9000 r=r"/>

	<!-- Lokale Klassifikation for GOK subject search -->
	<set name="pz:cclmap:lkl" value="u=5010 5=1 s=pw"/>
	<!-- Record type, Pica field MAK to exclude Normdatensätze -->
	<set name="pz:cclmap:mak" value="u=8600 5=1"/>
	<!-- DTM - date the volume was added to the local catalogue -->
	<set name="pz:cclmap:dtm" value="u=30 5=1"/>
	<!-- SLK - Selektionsschlüssel -->
	<set name="pz:cclmap:slk" value="u=8607 5=1"/>


	<!-- Retrieval settings -->
	<set name="pz:requestsyntax" value="usmarc"/>
	<set name="pz:elements" value="F"/>
	<set name="pz:queryencoding" value="utf-8"/>


	<!-- Result normalization settings -->
	<set name="pz:nativesyntax" value="txml;utf-8"/>
	<set name="pz:xslt" value="SUB-xsl/gbv-cleaner.xsl,tmarc.xsl,SUB-xsl/language-code-cleaner.xsl"/>

</settings>
