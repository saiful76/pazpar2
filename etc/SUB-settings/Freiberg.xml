<settings target="193.197.31.10:20210/swb">
<!--
	SRW/Freiberg target
	
	https://wiki.bsz-bw.de/doku.php?id=v-team:daten:z39.50

	2010-2011: Sven-S. Porst, SUB Göttingen <porst@sub.uni-goettingen.de>
-->
	<set name="pz:name" value="SWB Freiberg"/>
	<set name="catalogueURLHint" value="http://webopac.ub.tu-freiberg.de/libero/WebopacOpenURL.cls?ACTION=DISPLAY&amp;sid=Libero:TUF&amp;RID="/>
	
	
	<!-- filter for books in Freiberg library, @attr 1=1044 105 -->
	<set name="pz:pqf_prefix" value="@and @attr 1=1044 105"/>

	<!-- unqualified search -->
	<set name="pz:cclmap:term" value="u=1016 5=1 s=al"/>
	<!-- full-text search; maps to unqualified search if it doesn’t exist -->
	<set name="pz:cclmap:fulltext" value="u=1016 5=1 s=al"/>

	<!-- field-specific mappings -->
	<set name="pz:cclmap:title" value="u=4 s=al 2=102"/>
	<set name="pz:cclmap:person" value="u=1004 s=al"/>
	<set name="pz:cclmap:subject" value="u=46 s=al"/>
	<set name="pz:cclmap:isbn" value="u=7"/>
	<set name="pz:cclmap:issn" value="u=8"/>
	<set name="pz:cclmap:date" value="u=31 r=r"/>

	<!-- Freiberg classification exposed as Bib-1 Attribute 5010 -->
	<set name="pz:cclmap:fbg" value="u=5010 s=1 t=1"/>

	<!-- Retrieval settings -->
	<set name="pz:requestsyntax" value="marc21"/>
	<set name="pz:elements" value="F"/>
	<set name="pz:queryencoding" value="utf-8"/>


	<!-- Result normalization settings -->
	<set name="pz:nativesyntax" value="txml;iso-8859-1"/>
	<set name="pz:xslt" value="tmarc.xsl,SUB-xsl/language-code-cleaner.xsl,SUB-xsl/catalogue-url-hint+id.xsl,SUB-xsl/medium-strip-electronic.xsl"/>

</settings>
