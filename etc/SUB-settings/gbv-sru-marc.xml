<settings target="gso.gbv.de/sru/*">
<!-- 
	GBV SRU Server mit MARC Format
	Benötigt eigenes XSL, da die GBV-Daten 
	den Namespace marc: in den Tagnamen auslassen.
-->

	<!-- GBV unterstützt get und post in Version 1.1 -->

	<set name="pz:sru" value="get"/> 
	<set name="pz:sru_version" value="1.1"/>


	<!-- mapping for unqualified search -->
	<set name="pz:cclmap:term" value="u=cql.serverChoice t=l,r s=al"/>
	

	<!-- field-specific mappings -->
	<set name="pz:cclmap:ti" value="u=pica.tit s=al 2=102"/>
	<set name="pz:cclmap:au" value="u=pica.per s=al"/>
	<set name="pz:cclmap:su" value="u=21 s=al"/>
	<set name="pz:cclmap:isbn" value="u=pica.isbn"/>
	<set name="pz:cclmap:issn" value="u=pica.issn"/>
	<set name="pz:cclmap:date" value="u=pica.jah r=r"/>


	<!-- SRU schema. Eg. "dc" or "marcxml" -->
	<set name="pz:elements" value="marc21"/>


	<!-- Result normalization settings -->
	<set name="pz:nativesyntax" value="txml;utf-8"/>
	<set name="pz:xslt" value="SUB-xsl/MarcXML2TurboMarc.xsl,tmarc.xsl,SUB-xsl/gbv-cleaner.xsl"/>

</settings>
